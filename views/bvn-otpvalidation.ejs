<body>
<section>
<div class="container">
  <div class="row">
    <h3>OTP Validation</h3>
    <%if(typeof status != 'success') {%>
      <div class="alert alert-danger">Error occured</div>
      <pre>Response from flutterwave <%= JSON.stringify(message) %></pre>
    <%}
    else if(typeof status == 'success') {%>
      <div class="alert alert-success">BVN validation <%= JSON.stringify(respmsg)%></div>
      <pre>Response from Flutterwave <%= JSON.stringify(message) %></pre>
    <%}%>
    <form class="row" action="" method="post" role="form" id="bvnotp">
      <div class="col-sm-12">
        <div class="form-group">
          <label>Send OTP</label>
          <input type="text" name="bvnotp" class="form-control" placeholder="Enter otp code" required="please enter otp sent to registered phone number">
        </div>
      </div>
      <div class="col-sm-8">
        <div class="form-group">
          <button type="submit" name="otpbutton" class="btn btn-primary" id="otpbutton">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>


</section>



